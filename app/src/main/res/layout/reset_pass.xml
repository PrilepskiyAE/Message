<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/teal_200">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        android:layout_marginStart="@dimen/card_mrargin_start"
        android:layout_marginEnd="@dimen/card_margin_end"
        app:cardCornerRadius="@dimen/card_corner_radius"

        app:cardElevation="@dimen/card_elevator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_login"
                android:layout_width="@dimen/img_login_width"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/img_marginStart"
                android:src="@drawable/ic_person" />

            <LinearLayout
                android:id="@+id/item_divinder_login"
                android:layout_width="@dimen/item_givinder_login"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/devinder_margin_login"
                android:background="@color/black"
                android:orientation="vertical" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editPersonName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:ems="10"
                android:hint="@string/username"
                android:inputType="textPersonName" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        android:layout_marginTop="@dimen/card_marg_top"

        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevator"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="@dimen/img_password_width"
                android:layout_height="match_parent"

                android:layout_marginStart="@dimen/img_marginStart"
                android:src="@drawable/ic_baseline_lock_24" />

            <LinearLayout
                android:id="@+id/item_divinder2"
                android:layout_width="@dimen/item_givinder_password"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/divinder_margin_password"
                android:background="@color/black"
                android:orientation="vertical" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editpassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:ems="10"
                android:hint="@string/password"
                android:inputType="textPassword" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btUpdate"
        android:layout_width="@dimen/btn_login_width"
        android:layout_height="@dimen/btn_login_height"
        android:background="@drawable/style"
        android:text="@string/reset_btn"
        android:textSize="@dimen/btn_text_size"
        app:backgroundTint="@color/color_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />

</androidx.constraintlayout.widget.ConstraintLayout>