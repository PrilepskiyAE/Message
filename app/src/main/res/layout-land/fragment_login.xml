<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".presentation.login.LoginFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_img_or_lang"
        android:contentDescription="@string/login_logo"
        app:srcCompat="@drawable/logo"
        tools:src="@drawable/logo" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/tv_welcome"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/ed_hint_login"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:textColorHint="@color/text_color_hint"
            tools:ignore="TouchTargetSizeCheck" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/ed_hint_password"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/text_color_hint"
            tools:ignore="TouchTargetSizeCheck" />


    </LinearLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="@dimen/indent_from_margins" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/btReg"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/bt_text_reg"
            android:textColor="@color/text_color_hint" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/btResPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/bt_text_forgot_your_password"
            android:textColor="@color/text_color_hint" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/indent_from_margins" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_700"
        android:text="@string/ed_hint_login"
        android:textColor="@color/white" />



</LinearLayout>